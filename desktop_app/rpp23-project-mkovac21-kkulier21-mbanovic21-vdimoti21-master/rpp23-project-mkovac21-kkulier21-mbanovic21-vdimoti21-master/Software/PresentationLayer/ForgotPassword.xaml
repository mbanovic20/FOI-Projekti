<Window x:Class="PresentationLayer.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="ForgotPassword" Height="450" Width="800">
    <Grid Background="LightGray">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Email" Margin="5" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtEmail" Margin="5" Width="200"/>
            <Button x:Name="btnSend" Margin="5" Content="Send" Click="btnSend_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
