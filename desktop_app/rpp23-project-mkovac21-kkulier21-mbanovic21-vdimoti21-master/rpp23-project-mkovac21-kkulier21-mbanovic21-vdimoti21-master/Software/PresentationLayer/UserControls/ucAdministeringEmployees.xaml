<UserControl x:Class="PresentationLayer.UserControls.ucAdministeringEmployees"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Grid Background="LightGray">
        <StackPanel >
            <Label Content="Employee" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <DataGrid x:Name="dgvEmployee" Margin="50" />
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="40">
                <Button x:Name="btnEditEmployee" Content="Edit employee" Width="100" Height="40" FontWeight="Bold" Click="btnEditEmployee_Click" />
                <Button x:Name="btnRemoveEmployee" Content="Remove employee" Width="100" Height="40" FontWeight="Bold" Click="btnRemoveEmployee_Click" />
                <Button x:Name="btnAddEmployee" Content="Add new employee" Width="102" Height="40" FontWeight="Bold" Click="btnAddEmployee_Click"/>

            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
