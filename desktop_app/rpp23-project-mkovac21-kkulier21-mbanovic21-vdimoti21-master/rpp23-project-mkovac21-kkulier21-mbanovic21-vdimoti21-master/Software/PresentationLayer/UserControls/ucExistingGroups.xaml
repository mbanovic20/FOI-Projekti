<UserControl x:Class="PresentationLayer.UserControls.ucExistingGroups"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <DockPanel>
        <Label Content="Select Existing Groups" HorizontalContentAlignment="Center" DockPanel.Dock="Top"   FontWeight="Bold" FontSize="15" ></Label>
        <StackPanel DockPanel.Dock="Top" Margin="20,0,0,0">
            <Label Content="Existing Groups : " HorizontalContentAlignment="Left" DockPanel.Dock="Top"    FontSize="15" ></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="10,20,20,20">
            <Button x:Name="Cancel" Content="Cancel" Width="70" Margin="0,0,20,0" Click="Cancel_Click" ></Button>
            <Button x:Name="Add" DockPanel.Dock="Bottom" Click="Add_Click">Add Selected Groups</Button>
        </StackPanel>    
        <DataGrid x:Name="dgvExistingGroups" Margin="20,5,20,0"></DataGrid>
    </DockPanel>
</UserControl>
