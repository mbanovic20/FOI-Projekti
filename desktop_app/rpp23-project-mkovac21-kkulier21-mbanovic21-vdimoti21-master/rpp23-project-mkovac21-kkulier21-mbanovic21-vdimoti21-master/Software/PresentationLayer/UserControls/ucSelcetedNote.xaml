<UserControl x:Class="PresentationLayer.UserControls.ucSelcetedNote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <DockPanel Margin="0,20,0,0">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Behaviour: "></Label>
            <TextBox x:Name="txtBehaviour" Width="100" IsReadOnly="True"></TextBox>
        </StackPanel>
        <RichTextBox x:Name="rcbSelectedNote"></RichTextBox>
    </DockPanel>
</UserControl>
