<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCodeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validacija koda"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Polja za unos koda -->
    <LinearLayout
        android:id="@+id/linearLayoutCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCodeTitle"
        app:layout_constraintBottom_toTopOf="@+id/btnCodeConfirm"
        android:layout_marginTop="48dp">

        <EditText
            android:id="@+id/etCode1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_margin="2dp"/>

        <EditText
            android:id="@+id/etCode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_margin="2dp"/>

        <EditText
            android:id="@+id/etCode3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_margin="2dp"/>

        <EditText
            android:id="@+id/etCode4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_margin="2dp"/>

        <EditText
            android:id="@+id/etCode5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_margin="2dp"/>

        <EditText
            android:id="@+id/etCode6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnCodeConfirm"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:text="Potvrdi"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
