<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Homepage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="Scroll banner"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/banner1" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/banner2" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/banner3" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/banner4" />
            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/verticalScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/multilineText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="16dp"
                    android:gravity="start"
                    android:padding="16dp"
                    android:text="🌰 Welcome to SnackAlchemists Webshop! 🌰\n\nIndulge in the delightful world of custom nut mixes tailored just for you. At SnackAlchemists, we bring the joy of snacking to a whole new level. Create your personalized blend of nuts, seeds, and dried fruits with a few taps and savor a healthy and tasty treat that suits your unique taste buds.\n\nWhy SnackAlchemists?\n👩‍🍳 Create Your Mix: Choose from a variety of premium nuts, seeds, and dried fruits to design a mix that reflects your flavor preferences and dietary needs.\n🌈 Endless Possibilities: Mix and match ingredients to explore endless flavor combinations. From savory to sweet, create a blend that satisfies your cravings.\n🚀 Easy Ordering: Our user-friendly interface ensures a seamless ordering experience. Customize, add to cart, and get your NutMix delivered to your doorstep hassle-free.\n🥜 Quality Matters: We source the finest ingredients to guarantee freshness and flavor. Every NutMix is carefully crafted to deliver a premium snacking experience.\n🌍 Anytime, Anywhere: Whether you're at work, home, or on the go, NutMixify is your go-to snack companion. Enjoy a boost of energy whenever and wherever you need it.\n\nReady to upgrade Your Snack Game?\nGet started now and embark on a flavorful journey with SnackAlchemists. Your perfect mix is just a few clicks away!\n\nHappy Snacking! 🎉\nThe SnackAlchemists Team"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/myButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginBottom="16dp"
                    android:text="Personalize your snack mix" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>